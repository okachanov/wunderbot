		"@types/jest": "^23.3.2",
		"@types/node": "^10.9.4",
		"@types/redis": "^2.8.6",
		"@types/supertest": "^2.0.6",
		"babel-jest": "^23.6.0",
		"jest": "^23.6.0",
		"nodemon": "^1.18.4",
		"prettier": "^1.14.2",
		"supertest": "^3.3.0",
