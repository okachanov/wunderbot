		"ts-loader": "^5.1.0",
		"ts-node": "^7.0.1",
		"tsconfig-paths": "^3.6.0",
		"tslint": "^5.11.0",
		"@types/express": "^4.16.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
